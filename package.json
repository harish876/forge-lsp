{
  "name": "forge-lsp",
  "description": "Lsp for the forge etl framework. Provides Intellisense for config options during development",
  "author": "harish876",
  "license": "MIT",
  "version": "1.0.0",
  "publisher": "harish876",
  "repository": {
    "url": "https://github.com/harish876/forge-lsp.git"
  },
  "categories": [
    "Language Packs"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "python",
        "extensions": [
          ".py"
        ],
        "aliases": [
          "Python",
          "python"
        ],
        "mimetypes": [
          "text/x-python"
        ]
      },
      {
        "id": "ini",
        "aliases": [
          "INI",
          "ini"
        ],
        "extensions": [
          ".ini"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ini",
        "scopeName": "source.ini",
        "path": "./syntaxes/ini.tmLanguage.json"
      },
      {
        "language": "python",
        "scopeName": "source.python",
        "path": "./syntaxes/python.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "cd client && tsc",
    "watch": "cd client && tsc -w",
    "postinstall": "cd client && npm install"
  },
  "devDependencies": {
    "@types/node": "^20.5.7",
    "typescript": "^5.2.2"
  }
}
